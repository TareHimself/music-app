{
  "compilerOptions": {
    "baseUrl": "./src", // This must be specified if "paths" is.
    "paths": {
      "@redux/*": [
        "render/redux/*"
      ],
      "@hooks/*": [
        "render/hooks/*"
      ],
      "@components/*": [
        "render/components/*"
      ],
      "@render/*": [
        "render/*"
      ],
      "@types": [
        "./types.ts"
      ],
      "@root/*": [
        "*"
      ],
      "*": [
        "./node_modules/*"
      ]
    },
    "target": "ES2021",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "jsx": "react-jsx",
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
  },
  "include": [
    "src/**/*"
  ]
}